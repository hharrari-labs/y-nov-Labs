{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nomprojet }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ entity.statutprojet }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ entity.videoprojet }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ entity.datecreation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Date de maj</th>
                <td>{{ entity.datemajprojet|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Technologie</th>
                <td>{{ entity.technologie }}</td>
            </tr>
            <tr>
                <th>Equipe</th>
                <td>{{ entity.equipe }}</td>
            </tr>
            <tr>
                <th>Lien( page ou téléchargement)</th>
                <td>{{ entity.lienprojet }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ entity.logo }}</td>
            </tr>
        </tbody>
    </table>
        <ul class="record_actions">
    <li>
        <a href="{{ path('projet') }}">
            Back to the list
        </a>
    </li>
{%if(app.user.getGroupe()=="Admin" or app.user.getGroupe()=="DirLab" or (app.user.getGroupe()=="Chef de projet" and entity.idutilisateur.getId()==app.user.id) )%}
    <li>
        <a href="{{ path('projet_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
{%endif%}
</ul>
{% endblock %}
