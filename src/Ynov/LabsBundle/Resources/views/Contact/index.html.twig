{% extends '::layout.html.twig' %}

{% block body -%}
    
           <script type="text/javascript">
        $(".ff").each(function(){
            $(".ff").removeClass('active');
        })
        $(".Contact").addClass('active');
            </script>
<section id="subintro">
<div class="jumbotron subhead" id="overview">
	<div class="container">
		<div class="row">
			<div class="span8">
				<h3><i class="m-icon-big-swapright m-icon-white"></i>Contactez-nous</h3>
				<p>
					Nous sommes à votre disposition de 9H à 18H.
				</p>
			</div>
		</div>
	</div>
</div>   
</section>
<section id="maincontent">
<div class="container">
	<div class="row">
		<div class="span4">
			<aside>
			<div class="widget">
				<h4 class="heading-success"><span class="btn btn-large btn-success"><i class="m-icon-big-swapdown m-icon-white"></i></span>&nbsp;&nbsp;Coordonnées </h4>
				<ul>
					<li><label><strong>Phone : </strong></label>
					<p>
						0 800 60 06 33
					</p>
					</li>
					<li><label><strong>Email : </strong></label>
					<p>
						info@y-nov.com
					</p>
					</li>
					<li><label><strong>Adress : </strong></label>
					<p>
						27 Rue de Fontarabie, 75020 Paris
					</p>
					</li>
				</ul>
			</div>
			</aside>
		</div>
		<div class="span8">
			<div class="well">
				<iframe class="max-iframe" src="https://maps.google.fr/maps?f=q&amp;source=s_q&amp;hl=fr&amp;geocode=&amp;q=ING%C3%89SUP,+Rue+des+Pyr%C3%A9n%C3%A9es,+Paris&amp;aq=0&amp;oq=ing%C3%A9sup+paris&amp;sll=46.22475,2.0517&amp;sspn=23.322312,57.084961&amp;t=m&amp;ie=UTF8&amp;hq=ING%C3%89SUP,&amp;hnear=Rue+des+Pyr%C3%A9n%C3%A9es,+75020+Paris,+%C3%8Ele-de-France&amp;cid=4638250450542387394&amp;ll=48.858729,2.403259&amp;spn=0.019764,0.047207&amp;z=14&amp;iwloc=A&amp;output=embed">
				</iframe>
			</div>
			<div class="spacer30">
			</div>
			<form action="#" method="post" class="contact-form" name="comment-form">
				<div class="row">
					<div class="span3">
						<label>Name <span>*</span></label>
						<input type="text" class="input-block-level" placeholder="Your name" />
					</div>
					<div class="span3">
						<label>Email <span>*</span></label>
						<input type="text" class="input-block-level" placeholder="Your email" />
					</div>
					<div class="span8">
						<label>Message <span>*</span></label>
						<textarea rows="9" class="input-block-level" placeholder="Your message"></textarea>
						<button class="btn btn-medium btn-success" type="submit">Send a message</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
</section>        
    <h1>Contact list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Expediteur</th>
                <th>Destinataire</th>
                <th>Newletter</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.expediteur }}</td>
                <td>{{ entity.destinataire }}</td>
                <td>{{ entity.newletter }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contact_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contact_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contact_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
