{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Expediteur</th>
                <td>{{ entity.expediteur }}</td>
            </tr>
            <tr>
                <th>Destinataire</th>
                <td>{{ entity.destinataire }}</td>
            </tr>
            <tr>
                <th>Newletter</th>
                <td>{{ entity.newletter }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="table">
    <li>
        <a class="btn btn-primary" href="{{ path('contact') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="btn btn-success" href="{{ path('contact_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
