{% extends '::base.html.twig' %}

{% block body -%}

<section id="subintro">
<div class="jumbotron subhead" id="overview">
	<div class="container">
		<div class="row">
			<div class="span8">
				<h3><i class="m-icon-big-swapright m-icon-white"></i> Les Labos d'Ingésup</h3>
				<p>
					Presentation des différents labos dans l'ensemble des écoles d'Ingésup
				</p>
			</div>
			<div class="span4">
				<div class="input-append">
					<form class="form-search">
						<input type="text" class="input-medium search-query">
						<button type="submit" class="btn btn-inverse">Search</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</section>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomlab</th>
                <th>Datecreation</th>
                <th>Codecouleur</th>
                <th>Datemajlab</th>
                <th>Descriptionlab</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('labs_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomlab }}</td>
                <td>{% if entity.datecreation %}{{ entity.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.codecouleur }}</td>
                <td>{% if entity.datemajlab %}{{ entity.datemajlab|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.descriptionlab }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('labs_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('labs_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('labs_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
