{% extends '::base.html.twig' %}

{% block body -%}
<section id="subintro">
<div class="jumbotron subhead" id="overview">
	<div class="container">
		<div class="row">
			<div class="span8">
				<h3><i class="m-icon-big-swapright m-icon-white"></i> Les Labos d'Ingésup</h3>
				<p>
					Presentation des différents labos dans l'ensemble des écoles d'Ingésup
				</p>
			</div>
			<div class="span4">
				<div class="input-append">
					<form class="form-search">
						<input type="text" class="input-medium search-query">
						<button type="submit" class="btn btn-inverse">Search</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</section>
<section id="maincontent">
<div class="container">
         {% for entity in entities %}
                        <div class="row">
				<div class="span3">
					<div class="well well-primary">
						<h2>{{ entity.nomlab }}</h2>
						<p>
							<span class="label">Disponible</span>
                                                        
						</p>
                                                {#<ul class="check-white">
                                                {% for site in site_entities %}						
							<li>{{ site.nomsite }}</li>						
                                                {% endfor %}
                                                </ul>#}
						<p>
							<a class="btn btn-large" href="#"><i class=" icon"></i> En savoir +</a>
						</p>
					</div>
				</div>
                                <div class="span9">
                                    <p>
                                        {{ entity.descriptionlab }}
                                    </p>
                               </div>
                        </div>
    {% endfor %}
  </div>
</section>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomlab</th>
                <th>Datecreation</th>
                <th>Codecouleur</th>
                <th>Datemajlab</th>
                <th>Descriptionlab</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('labs_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomlab }}</td>
                <td>{% if entity.datecreation %}{{ entity.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.codecouleur }}</td>
                <td>{% if entity.datemajlab %}{{ entity.datemajlab|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.descriptionlab }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('labs_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('labs_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('labs_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
