{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Labs</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nomlab</th>
                <td>{{ entity.nomlab }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ entity.datecreation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Codecouleur</th>
                <td>{{ entity.codecouleur }}</td>
            </tr>
            <tr>
                <th>Datemajlab</th>
                <td>{{ entity.datemajlab|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Descriptionlab</th>
                <td>{{ entity.descriptionlab }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('labs') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('labs_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
