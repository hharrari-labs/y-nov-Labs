{% extends '::base.html.twig' %}

{% block body -%}
    <section id="maincontent">
    <div class="container">
            <div class="row">
                    <div class="span12">
                        <h1>Modification du Laboratoire</h1>

                        <form action="{{ path('labs_create') }}" method="post" {{ form_enctype(edit_form) }}>
                            <table class="table">
                                <tr>
                                    <td>{{ form_label(edit_form.nomlab,'Nom')}}</td>
                                    <td>{{ form_widget(edit_form.nomlab) }}</td>
                                    <td>{{ form_errors(edit_form.nomlab) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_label(edit_form.descriptionlab,'Description')}}</td>
                                    <td>{{ form_widget(edit_form.descriptionlab) }}</td>
                                    <td>{{ form_errors(edit_form.descriptionlab) }}</td>
                                </tr>
                                <tr>
                                    <td colspan="3">Cochez ci-dessous les Ã©coles qui proposent ce Laboratoire</td>
                                </tr>
                                {%for site in edit_form.idsite%}
                                <tr>  
                                    <td>{{form_label(site)}} </td>
                                    <td>{{form_widget(site)}}</td>
                                    <td>&nbsp;</td>
                                </tr>   
                                 {%endfor%}
                            </table>
                                    
                            <div>
                                {{ form_widget(edit_form.submit, { 'label': 'Soumettre' })}}
                            </div>
                            <div class="hidden">{{ form_rest(edit_form)}}</div>
                         </form> 

                        <ul class="record_actions" style="margin-left: 0px;">
                                <li  style="list-style-type: none;">
                                    <a href="{{ path('labs') }}">
                                    Liste des Laboratoires
                                    </a>
                                </li>
                            </ul>
                            
                    </div>
            </div>
    </div>
    </section>
    
{% endblock %}
