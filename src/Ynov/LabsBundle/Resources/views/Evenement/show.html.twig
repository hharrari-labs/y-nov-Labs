{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Evenement</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ entity.lieu }}</td>
            </tr>
            <tr>
                <th>Date de l'évenement</th>
                <td>{{ entity.dateevenement|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Date de creation</th>
                <td>{{ entity.datecreation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lien (Vidéo, page, Photo)</th>
                <td>{{ entity.lienevenement }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.descriptionevenement }}</td>
            </tr>
            <tr>
                <th>Date de maj</th>
                <td>{{ entity.datemajevenement|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('evenement') }}">
            Liste de événements
        </a>
    </li>
{%if(app.user.getGroupe()=="Admin" or (app.user.getGroupe()=="DirLab" and entity.idutilisateur.getId()==app.user.id))%}
    <li>
        <a href="{{ path('evenement_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
{%endif%}
</ul>
{% endblock %}
