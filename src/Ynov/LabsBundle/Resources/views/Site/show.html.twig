{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nomsite }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entity.adressesite }}</td>
            </tr>
            <tr>
                <th>Télephone</th>
                <td>{{ entity.telephone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ entity.fax }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ entity.datecreation|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
{%if(app.user.getGroupe()=="Admin")%}
        <ul class="record_actions">
    <li>
        <a href="{{ path('site') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('site_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{%endif%}
{% endblock %}
